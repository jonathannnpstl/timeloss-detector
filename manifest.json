{
    "manifest_version": 3,
    "name": "Time-Loss Calculator",
    "version": "1.0",
    "permissions": ["tabs", "idle", "storage", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "run_at": "document_idle"
        }
      ],
    "host_permissions": ["<all_urls>"]
  }
  